#!/usr/bin/env bash

requirements=$(find . -mindepth 1 -maxdepth 2 -name "requirements*.txt")

if ! [[ -d ".venv/" ]]; then
	echo "creating venv"
	python3 -m virtualenv .venv

	for requirement in "$requirements"; do
		echo "installing $requirement"
		python -m pip install -r $requirement
	done
fi

echo "sourcing venv"
. .venv/bin/activate

